rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /contacts/{document=**} {
      allow read, write: if true;  // For testing, allow all access to contacts collection
      // In production you might want: allow write: if request.auth != null;
    }
    
    // Default rule for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
